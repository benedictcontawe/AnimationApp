<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <data class="MainBinder">
        <variable
            name="viewModel"
            type="com.example.animationapp.MainViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:animateLayoutChanges="true" >
        <!--region Guide lines-->
        <!--region Vertical Guide lines-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/constraint_guideline_vertical_leading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/constraint_guideline_vertical_trailing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>
        <!--endregion-->
        <!--region Horizontal Guide lines-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/constraint_guideline_horizontal_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/constraint_guideline_horizontal_90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.90" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/constraint_guideline_horizontal_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />
        <!--endregion-->
        <!--endregion-->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button_android"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/android"
            android:drawingCacheQuality="high"
            android:scaleType="fitXY"
            app:backgroundTint="@color/purple_200"
            app:fabSize="auto"
            app:srcCompat="@drawable/ic_android_red"
            app:tint="@color/white"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/constraint_guideline_horizontal_90"
            app:layout_constraintStart_toStartOf="@id/constraint_guideline_vertical_leading"
            app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_horizontal_bottom" />

        <com.example.animationapp.MovableFloatingActionButton
            android:id="@+id/movable_floating_action_button_android"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/android"
            android:drawingCacheQuality="high"
            android:scaleType="fitXY"
            app:backgroundTint="@color/purple_500"
            app:fabSize="auto"
            app:srcCompat="@drawable/ic_android_red"
            app:tint="@color/white"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/constraint_guideline_horizontal_90"
            app:layout_constraintEnd_toEndOf="@id/constraint_guideline_vertical_trailing"
            app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_horizontal_bottom" />

        <com.example.animationapp.MagneticFloatingActionButton
            android:id="@+id/magnetic_floating_action_button_android"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:contentDescription="@string/android"
            android:drawingCacheQuality="high"
            android:scaleType="fitXY"
            app:backgroundTint="@color/purple_700"
            app:fabSize="auto"
            app:srcCompat="@drawable/ic_android_red"
            app:tint="@color/white"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="@id/constraint_guideline_horizontal_90"
            app:layout_constraintEnd_toEndOf="@id/constraint_guideline_vertical_trailing"
            app:layout_constraintBottom_toBottomOf="@id/constraint_guideline_horizontal_bottom" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>